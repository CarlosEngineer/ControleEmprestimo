@model EmprestimoModel


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["title"] = "Excluir Emprestimo";
}
<div class="container bg-dark p-5 rounded-5 ">

    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir Empréstimos</h1>
    </div>



    <form method="post" asp-asp-controller="Emprestimo" asp-action="Excluir" >
        <input type="hidden" asp-for="Id" />

        <h2 class="text-light">Tem certeza que deseja excluir ? </h2>

        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem esta recebendo o livro?" disable>
            <span class="text-danger " asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Responsavel pelo emprestimo?" disable>
            <span class="text-danger " asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Livro</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="Qual livro esta sendo emprestado?" disable>
            <span class="text-danger " asp-validation-for="LivroEmprestado"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger  w-50"> <i class="bi bi-trash3"></i> Excluir</button>
            <a class="btn btn-primary w-50 " asp-asp-controller="Emprestimo" asp-action="Index"><i class="bi bi-skip-backward"></i> Voltar</a>
        </div>



    </form>
</div>
